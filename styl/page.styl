/**
* Page
*
* Single page (ie, About)
*/


.Page {
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  max-width: 700px;
}

.Page-content {
  order: 0;
}

.Page-title {
  font-weight: 400;
}

.Page-body {
  text-align: center;

  img {
    margin-bottom: 20px;
    max-width: 100%;
    height: auto;
  }
}
